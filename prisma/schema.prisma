generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model CV {
  id          Int    @id @default(autoincrement())
  user_id     Int
  name        String @db.VarChar(255)
  email       String @db.VarChar(100)
  address     String @db.VarChar(255)
  linkedin    String @db.VarChar(100)
  about       String
  interest    Json
  skill       Json
  education   Json
  experience  Json
  projects    Json
  certificate Json

  user User @relation(fields: [user_id], references: [id])

  @@index([name])
  @@index([email])
  @@map("cv")
}

model User {
  id       Int    @id @default(autoincrement())
  name     String @db.VarChar(255)
  password String @db.VarChar(255)
  email    String @unique @db.VarChar(255)

  cv               CV[]
  user_roles       UserRoles[]
  job_descriptions JobDescription[]
  ai_agents        AIAgent[]
  vectors          Vector[]
  documents        Document[]

  @@index([name])
  @@map("users")
}

model Permissions {
  id               Int               @id @default(autoincrement())
  key              String            @unique(map: "permissions_key_unique") @db.VarChar(100)
  name             String            @db.VarChar(100)
  role_permissions RolePermissions[]

  @@map("permissions")
}

model RolePermissions {
  role_id       Int
  permission_id Int
  roles_id      Int?

  role       Role        @relation(fields: [role_id], references: [id])
  permission Permissions @relation(fields: [permission_id], references: [id])

  @@id([role_id, permission_id], map: "RolePermissions_role_id_permission_id_pk")
  @@map("role_permissions")
}

model Role {
  id               Int               @id @default(autoincrement())
  name             String            @unique(map: "roles_name_unique") @db.VarChar(100)
  role_permissions RolePermissions[]
  user_roles       UserRoles[]

  @@map("roles")
}

model UserRoles {
  user_id Int
  role_id Int

  user User @relation(fields: [user_id], references: [id])
  role Role @relation(fields: [role_id], references: [id])

  @@id([user_id, role_id], map: "user_roles_user_id_role_id_pk")
  @@map("user_roles")
}

model JobDescription {
  id      Int @id @default(autoincrement())
  user_id Int

  title           String @db.VarChar(255)
  company         String @db.VarChar(255)
  location        String @db.VarChar(255)
  employment_type String @db.VarChar(50)
  level           String @db.VarChar(50)

  status String @default("draft") @db.VarChar(50)

  description      String @db.Text
  responsibilities String @db.Text
  requirements     String @db.Text
  skills           String @db.Text

  experience_year Int
  salary_range    Json

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  // relations
  user    User     @relation(fields: [user_id], references: [id])
  vectors Vector[]

  @@index([user_id])
  @@index([title])
  @@index([status])
  @@map("job_descriptions")
}

model AIAgent {
  id      Int @id @default(autoincrement())
  user_id Int

  type   String @db.VarChar(50)
  config Json

  user User @relation(fields: [user_id], references: [id])

  @@index([user_id])
  @@map("ai_agents")
}

model Vector {
  id      Int @id @default(autoincrement())
  user_id Int

  source_type String @db.VarChar(50) // "CV" | "JOBDESC" | "DOCUMENT"
  source_id   Int

  embedding Json // array float
  content   String // chunked text

  user             User            @relation(fields: [user_id], references: [id])
  jobDescription   JobDescription? @relation(fields: [jobDescriptionId], references: [id])
  jobDescriptionId Int?
  document         Document?       @relation(fields: [documentId], references: [id])
  documentId       Int?

  @@index([user_id])
  @@index([source_type, source_id])
  @@map("vectors")
}

model Document {
  id      Int @id @default(autoincrement())
  user_id Int

  title  String @db.VarChar(255)
  type   String @db.VarChar(50) // culture, policy, recruitment, etc
  source String @db.VarChar(50) // upload, generated

  content  String // raw text (optional if file-based)
  metadata Json // file info, author, version, etc

  status String @default("active") @db.VarChar(50)

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  // relations
  user    User     @relation(fields: [user_id], references: [id])
  vectors Vector[]

  @@index([user_id])
  @@index([type])
  @@index([status])
  @@map("documents")
}
